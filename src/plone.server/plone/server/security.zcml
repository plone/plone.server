<configure xmlns="http://namespaces.zope.org/zope">

  <include package="zope.securitypolicy" file="meta.zcml" />
  <include package="zope.securitypolicy" />

  <!-- Anonymous -->
  <grant
      permission="plone.AccessPreflight"
      role="plone.Anonymous"
      />

  <!-- Reader -->
  <grant
      permission="plone.ViewContent"
      role="plone.Reader"
      />

  <grant
      permission="plone.AccessContent"
      role="plone.Reader"
      />

  <!-- Owner -->
  <grant
      permission="plone.DeleteContent"
      role="plone.Owner"
      />

  <grant
      permission="plone.AddContent"
      role="plone.Owner"
      />

  <grant
      permission="plone.AccessContent"
      role="plone.Owner"
      />

  <grant
      permission="plone.ViewContent"
      role="plone.Owner"
      />

  <grant
      permission="plone.ModifyContent"
      role="plone.Owner"
      />

  <grant
      permission="plone.ChangePermissions"
      role="plone.Owner"
      />

  <grant
      permission="plone.SeePermissions"
      role="plone.Owner"
      />

  <grant
      permission="plone.ReindexContent"
      role="plone.Owner"
      />

  <!-- Editor -->
  <grant
      permission="plone.ViewContent"
      role="plone.Editor"
      />

  <grant
      permission="plone.AccessContent"
      role="plone.Editor"
      />

  <grant
      permission="plone.ModifyContent"
      role="plone.Editor"
      />

  <grant
      permission="plone.ReindexContent"
      role="plone.Editor"
      />

  <!-- Member -->
  <grant
      permission="plone.AccessContent"
      role="plone.Member"
      />

  <!-- SiteAdmin -->
  <grant
      permission="plone.AccessContent"
      role="plone.SiteAdmin"
      />

  <grant
      permission="plone.ManageAddons"
      role="plone.SiteAdmin"
      />

  <grant
      permission="plone.ReadConfiguration"
      role="plone.SiteAdmin"
      />

  <grant
      permission="plone.WriteConfiguration"
      role="plone.SiteAdmin"
      />

  <grant
      permission="plone.RegisterConfigurations"
      role="plone.SiteAdmin"
      />  

  <!-- SiteDeleter -->
  <grant
      permission="plone.DeletePortals"
      role="plone.SiteDeleter"
      />

  <adapter factory=".security.getCurrentInteraction" />
  <adapter
    factory=".factory.RootSpecialPermissions"
    provides="zope.securitypolicy.interfaces.IPrincipalPermissionManager"
    for="plone.server.interfaces.IDataBase"
    trusted="true"
    />

  <adapter
    factory=".factory.RootSpecialPermissions"
    provides="zope.securitypolicy.interfaces.IPrincipalPermissionManager"
    for="plone.server.interfaces.IApplication"
    trusted="true"
    />

  <adapter
    factory=".types.StaticFileSpecialPermissions"
    provides="zope.securitypolicy.interfaces.IPrincipalPermissionManager"
    for="plone.server.interfaces.IStaticFile"
    trusted="true"
    />

  <adapter
    factory=".types.StaticFileSpecialPermissions"
    provides="zope.securitypolicy.interfaces.IPrincipalPermissionManager"
    for="plone.server.interfaces.IStaticDirectory"
    trusted="true"
    />

</configure>
