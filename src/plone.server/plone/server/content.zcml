<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:plone="http://namespaces.plone.org/plone">

  <include package="plone.server" file="meta.zcml" />

  <plone:contenttype
      portal_type="Plone Site"
      schema=".interfaces.IPloneSite"
      class=".types.PloneSite"
      behaviors=""
      />

  <plone:contenttype
      portal_type="Item"
      schema=".types.IItem"
      class=".types.Item"
      behaviors=".behaviors.dublincore.IDublinCore"
    />

  <plone:contenttype
      portal_type="Folder"
      schema=".types.IFolder"
      class=".types.Folder"
    />

   <adapter
   	  for="plone.server.interfaces.IDataBase
   	       plone.server.interfaces.IRequest"
   	  factory="plone.server.factory.DataBaseToJson"
   	  provides="plone.jsonserializer.interfaces.ISerializeToJson"
   	  />

   <adapter
   	  for="plone.server.interfaces.IApplication
   	       plone.server.interfaces.IRequest"
   	  factory="plone.server.factory.ApplicationToJson"
   	  provides="plone.jsonserializer.interfaces.ISerializeToJson"
   	  />


</configure>
